<div class = "container-fluid city_form">
	<div class = "row">
		<div class = "col-md-3 offset-md-4">
			<div class = "text-center form-group">
				<%= form_for @city do |f| %>
				<div class = "form-group">
					<h3><%= f.label "Enter City: " %></h3>
					<%= f.search_field (:place, :city) , autofocus: true, class: 'form-control' %>
				</div>
				<div class = "actions form-group">
					<%= f.submit "Search", class: "btn btn-info btn-md btn-block" %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
