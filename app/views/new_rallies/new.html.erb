
<div class = "row">
	<div class = "col-md-4 offset-md-4">
		<div class = "container card card-block bg-faded" id = "createrally">
			<h3 class = "text-center"> Create a Rally </h3>
			<%= form_for @newrally do |f| %>
				<div class = "form-group">
					<%= f.label :title %>
					<%= f.text_field :title, autofocus: true, class: 'form-control' %>
				</div>
				<div class = "form-group">
					<%= f.label :description %>
					<%= f.text_area :description, autofocus: true, class: 'form-control' %>
				</div>
				<div class = "form-group">
					<%= f.label :organization %>
					<%= f.text_field :organization, autofocus: true, class: 'form-control' %>
				</div>
				<div class = "form-group">
					<%= f.label :city %>
					<%= f.select :city, 
						options_for_select([['Louisville', 1], ['Chicago', 2]] 
					)%>
				</div>
				<div class = "form-group">
					<%= f.label :country %>
					<%= f.select( :country, options_for_select([['Armenia', 1], ['USA', 2]])) %>
				</div>
				
				<div class = "text-center">
				<%= f.submit 'Submit', class: 'btn btn-success' %>
				</div>
			<% end %>
		</div>
	</div>