<!DOCTYPE html>
<html>
  <head>
    <title>Rally</title>
    <%= csrf_meta_tags %>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <div class="container navbar-right">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <%= link_to root_path, class: "navbar-brand bold" do %>
          <i class="fa fa-group"></i> RightToAssemble
        <% end %>

        <div class="container collapse navbar-collapse pull-right" id="navbarNav">
          <ul class="nav navbar-nav navbar-right ml-auto">
            <li class="nav-item active">
              <%= link_to "About Us", about_path %>
            </li>

    <nav class="navbar navbar-default" role="navigation">
      <div class='container'>
        <div class="navbar-header">
         
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav-collapse" aria-expanded = "false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

            <%= link_to root_path, class: "navbar-brand" do %>
            <i class="fa fa-group"></i> 
            RightToAssemble
            <% end %>
            
        </div>
        <div class="collapse navbar-collapse" id="main-nav-collapse">
          <ul class="nav navbar-nav">
            <li class = "active"><%= link_to "About Us", about_path %></li>
            <li class = "active"><%= link_to "Hot City Rallies", hot_rally_city_path %></li>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

  </body>
</html>
